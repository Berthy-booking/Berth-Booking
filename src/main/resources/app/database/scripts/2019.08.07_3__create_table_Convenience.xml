<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="2019.08.07_3_1" author="aplotnikov">
        <createTable tableName="convenience">
            <column name="id" type="int">
                <constraints primaryKey="true" primaryKeyName="pk_convenience"/>
            </column>
            <column name="code" type="varchar(16)">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="varchar(64)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addAutoIncrement tableName="convenience"
                          columnName="id"
                          columnDataType="int"
                          startWith="0"
                          incrementBy="1"/>
    </changeSet>

    <changeSet id="2019.08.07_3_2" author="aplotnikov">
        <addUniqueConstraint tableName="convenience"
                             columnNames="code"
                             constraintName="uc_convenience_code"/>
    </changeSet>

    <changeSet id="2019.08.07_3_3" author="aplotnikov">
        <createTable tableName="berth_to_convenience">
            <column name="berth_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="convenience_id" type="int">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey tableName="berth_to_convenience"
                       columnNames="berth_id, convenience_id"
                       constraintName="pk_berth_to_convenience"/>

        <addForeignKeyConstraint baseTableName="berth_to_convenience"
                                 baseColumnNames="berth_id"
                                 constraintName="fk_berth_to_convenience_berth"
                                 referencedTableName="berth"
                                 referencedColumnNames="id"
                                 onDelete="CASCADE"/>

        <addForeignKeyConstraint baseTableName="berth_to_convenience"
                                 baseColumnNames="convenience_id"
                                 constraintName="fk_berth_to_convenience_conv"
                                 referencedTableName="convenience"
                                 referencedColumnNames="id"
                                 onDelete="CASCADE"/>
    </changeSet>

    <changeSet id="2019.08.07_3_4" author="aplotnikov">
        <sql>
            INSERT INTO convenience (code, name) VALUES ('wifi', 'Wi-Fi');
            INSERT INTO convenience (code, name) VALUES ('food', 'Food and Drinks');
        </sql>
    </changeSet>

    <changeSet id="2019.08.07_3_5" author="aplotnikov">
        <sql>
            INSERT INTO convenience (code, name) VALUES ('grocery_store', 'Grocery store');
            INSERT INTO convenience (code, name) VALUES ('restaurant', 'Restaurant');
            INSERT INTO convenience (code, name) VALUES ('local_bar', 'Bar');
            INSERT INTO convenience (code, name) VALUES ('local_hotel', 'Hotel');
            INSERT INTO convenience (code, name) VALUES ('bathtub', 'Shower');
            INSERT INTO convenience (code, name) VALUES ('car_rental', 'Car rental');
            INSERT INTO convenience (code, name) VALUES ('bicycle_rental', 'Bicycle rental');
            INSERT INTO convenience (code, name) VALUES ('exchanger', 'Exchanger');
        </sql>
    </changeSet>

</databaseChangeLog>