<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="2019.04.06_1_1" author="aplotnikov">
        <createTable tableName="ship">
            <column name="id" type="bigint">
                <constraints primaryKey="true" primaryKeyName="pk_ship"/>
            </column>
            <column name="user_id" type="bigint"/>
            <column name="name" type="varchar(40)">
                <constraints nullable="false"/>
            </column>
            <column name="length" type="double">
                <constraints nullable="false"/>
            </column>
            <column name="draft" type="double">
                <constraints nullable="false"/>
            </column>
            <column name="width" type="double"/>
        </createTable>

        <addForeignKeyConstraint baseTableName="ship"
                                 baseColumnNames="user_id"
                                 constraintName="fk_ship_user"
                                 referencedTableName="user_"
                                 referencedColumnNames="id"
                                 onDelete="CASCADE"/>

        <addAutoIncrement tableName="ship"
                          columnName="id"
                          columnDataType="bigint"
                          startWith="0"
                          incrementBy="1"/>
    </changeSet>

    <changeSet id="2019.04.06_1_2" author="aplotnikov">
        <createTable tableName="ship_photo">
            <column name="ship_id" type="bigint"/>
            <column name="num" type="int"/>
            <column name="photoFile" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey tableName="ship_photo"
                       columnNames="ship_id, num"
                       constraintName="pk_ship_photo"/>

        <addForeignKeyConstraint baseTableName="ship_photo"
                                 baseColumnNames="ship_id"
                                 constraintName="fk_ship_photo_ship"
                                 referencedTableName="ship"
                                 referencedColumnNames="id"
                                 onDelete="CASCADE"/>
    </changeSet>

</databaseChangeLog>