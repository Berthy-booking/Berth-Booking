<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="2019.03.08_1_1" author="aplotnikov">
        <createTable tableName="account">
            <column name="id" type="bigint">
                <constraints primaryKey="true" primaryKeyName="pk_account"/>
            </column>
            <column name="email" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="password_hash" type="varchar(60)">
                <constraints nullable="false"/>
            </column>
            <column name="salt" type="varchar(16)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="2019.03.08_1_2" author="aplotnikov">
        <addAutoIncrement tableName="account"
                          columnName="id"
                          columnDataType="bigint"
                          startWith="0"
                          incrementBy="1"/>
    </changeSet>

    <changeSet id="2019.03.08_1_3" author="aplotnikov">
        <addUniqueConstraint tableName="account" columnNames="email"/>
    </changeSet>

    <changeSet id="2019.03.08_1_4" author="aplotnikov">
        <createTable tableName="account_to_role">
            <column name="account_id" type="bigint"/>
            <column name="role" type="varchar(20)"/>
        </createTable>

        <addForeignKeyConstraint baseTableName="account_to_role"
                                 baseColumnNames="account_id"
                                 constraintName="fk_account_to_role_acc"
                                 referencedTableName="account"
                                 referencedColumnNames="id"
                                 onDelete="CASCADE"/>

        <addUniqueConstraint tableName="account_to_role"
                             columnNames="account_id, role"
                             constraintName="uc_account_to_role"/>
    </changeSet>

</databaseChangeLog>