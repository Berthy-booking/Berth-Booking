<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="2019.03.08_1_1" author="aplotnikov">
        <createTable tableName="User">
            <column name="id" type="bigint">
                <constraints primaryKey="true" primaryKeyName="PK_Users"/>
            </column>
            <column name="name" type="varchar(30)"/>
            <column name="surname" type="varchar(40)"/>
            <column name="email" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="phoneNum" type="varchar(20)">
                <constraints nullable="false"/>
            </column>
            <column name="photo" type="blob"/>
        </createTable>
    </changeSet>

    <changeSet id="2019.03.08_1_2" author="aplotnikov">
        <addAutoIncrement tableName="User"
                          columnName="id"
                          columnDataType="bigint"
                          startWith="0"
                          incrementBy="1"/>
    </changeSet>

    <changeSet id="2019.03.08_1_3" author="aplotnikov">
        <addUniqueConstraint tableName="User" columnNames="email"/>
        <addUniqueConstraint tableName="User" columnNames="phoneNum"/>
    </changeSet>

</databaseChangeLog>