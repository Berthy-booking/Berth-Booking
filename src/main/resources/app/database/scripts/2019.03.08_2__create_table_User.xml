<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="2019.03.08_2_1" author="aplotnikov">
        <createTable tableName="user_">
            <column name="account_id" type="bigint">
                <constraints primaryKey="true" primaryKeyName="pk_user"/>
            </column>
            <column name="first_name" type="varchar(30)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="varchar(40)">
                <constraints nullable="false"/>
            </column>
            <column name="ph_code" type="varchar(3)">
                <constraints nullable="false"/>
            </column>
            <column name="ph_number" type="varchar(20)">
                <constraints nullable="false"/>
            </column>
            <column name="photo_name" type="varchar(42)"/>
        </createTable>
    </changeSet>

    <changeSet id="2019.03.08_2_2" author="aplotnikov">
        <addForeignKeyConstraint baseTableName="user_"
                                 baseColumnNames="account_id"
                                 constraintName="fk_user_account"
                                 referencedTableName="account"
                                 referencedColumnNames="id"
                                 onDelete="CASCADE"/>
    </changeSet>

</databaseChangeLog>